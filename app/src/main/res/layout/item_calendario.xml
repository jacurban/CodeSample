<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_calendario_day_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/dia" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_calendario_CL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_bckg_light_red"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_calendario_day_TXV">

        <TextView
            android:id="@+id/item_calendario_course_name_TXV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/cursos"
            android:textSize="12sp"
            android:paddingEnd="2dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@id/item_calendario_class_name_TXV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/item_calendario_class_name_TXV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/turma" />

        <TextView
            android:id="@+id/item_calendario_class_reference_TXV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="(localizacao)"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/item_calendario_class_name_TXV"
            app:layout_constraintStart_toStartOf="@id/item_calendario_course_name_TXV"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/item_calendario_time_TXV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_calendario_info_V"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/hora" />

        <View
            android:id="@+id/item_calendario_info_V"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_info"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>