<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_payment_CTL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingStart="5dp">

    <TextView
        android:id="@+id/item_payment_course_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Curso" />

    <View
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/colorGrayDark"
        app:layout_constraintBottom_toBottomOf="@id/item_payment_course_TXV"
        app:layout_constraintStart_toEndOf="@id/item_payment_course_TXV"
        app:layout_constraintTop_toTopOf="@id/item_payment_course_TXV" />

    <TextView
        android:id="@+id/item_payment_class_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintTop_toTopOf="@id/item_payment_course_TXV"
        tools:text="Aluno" />

    <TextView
        android:id="@+id/item_payment_month_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:textSize="@dimen/text_size_item_list"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/item_payment_course_TXV"
        app:layout_constraintTop_toBottomOf="@id/item_payment_course_TXV"
        tools:text="Mes" />

    <TextView
        android:id="@+id/cifrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/real"
        android:textSize="12sp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_payment_label_due_TXV"/>

    <TextView
        android:id="@+id/item_payment_value_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Valor"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/cifrao"
        app:layout_constraintTop_toTopOf="@id/item_payment_label_due_TXV"/>

    <View
        android:id="@+id/space2"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/colorGrayDark"
        app:layout_constraintBottom_toBottomOf="@id/item_payment_label_due_TXV"
        app:layout_constraintStart_toEndOf="@id/item_payment_value_TXV"
        app:layout_constraintTop_toTopOf="@id/item_payment_label_due_TXV" />

    <TextView
        android:id="@+id/item_payment_label_due_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="@string/vencimento_em"
        app:layout_constraintStart_toEndOf="@id/space2"
        app:layout_constraintTop_toBottomOf="@id/item_payment_month_TXV"/>

    <TextView
        android:id="@+id/item_payment_due_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toEndOf="@id/item_payment_label_due_TXV"
        app:layout_constraintTop_toTopOf="@id/item_payment_label_due_TXV"
        tools:text="Vencimento" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlueSoft"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/image_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_go"
        android:tint="@color/colorGrayDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_payment_status_TXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="status"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/item_payment_month_TXV"
        app:layout_constraintEnd_toStartOf="@id/image_go"/>


</androidx.constraintlayout.widget.ConstraintLayout>